<div class="page-header-main  header-space">
  <div class="page-header-container">
    <div>
      <h1 class="page-heading">{{ page.title }}</h1>
      
      {% render 'breadcrumb' %}
    </div>
  </div>
  <div class="container">
  <div class="page-content-box">
      <div class="rte content-section">
        <div class="aside-menu">
          <div class="collection-page__aside-menu">
                          <h3><i class="fa fa-list-ul" aria-hidden="true" style="margin-right: 1rem;"></i>{{ section.settings.asidemenu }}</h3>
                          <ul class="menu">
                            {% for link in section.settings.asidemenu.links %}
                              <li class="menu-link">
                                <a href="{{ link.url }}">{{ link.title }}</a>
                          
                                {% if link.links.size > 0 %}
                                  <ul class="menu dropdown-child">
                                    {% for child_link in link.links %}
                                      <li class="menu-link">
                                        <a href="{{ link.url }}{{ child_link.url }}">{{ child_link.title }}</a>
                          
                                        {% if child_link.links.size > 0 %}
                                          <ul class="menu dropdown-grandchild">
                                            {% for grandchild_link in child_link.links %}
                                              <li class="menu-link">
                                                <a href="{{ link.url }}{{ child_link.url }}{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                              </li>
                                            {% endfor %}
                                          </ul>
                                        {% endif %}
                                      </li>
                                    {% endfor %}
                                  </ul>
                                {% endif %}
                              </li>
                            {% endfor %}
                          </ul>
  
                          </div>
        </div>
        <div class="page-content">
            {{ page.content }}
            <div class="main-faq-text">{{ section.settings.main-heading }}</div>
          <div class="faq-container">
            {% for block in section.blocks %}
            <div class="accordion-container1">
              <div class="faq-new-heading">{{ block.settings.heading1 }}</div>
              <div class="accordion-items accordion-items1">
                {% if block.settings.question1 == empty %}
