            <script>
              $(document).ready(function () {
              $(".accordion-items1").on("click", ".accordion-heading", function () {
                $(this).toggleClass("active").next().slideToggle();
            
                $(".accordion-content").not($(this).next()).slideUp(300);
            
                $(this).siblings().removeClass("active");
              });
            });
