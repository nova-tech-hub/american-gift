<div class="page-header-main  header-space"  style="margin-top: -7px !important;">
  <div class="page-header-container">
    <div>
      <h1 class="page-heading">{{ page.title }}</h1>

      {% render 'breadcrumb' %}
    </div>
  </div>
  <div class="container">
    <div class="page-content-box">
      <div class="rte content-section">
        <div class="aside-menu">
          <div class="collection-page__aside-menu">
            <h3>
              <i class="fa fa-list-ul" aria-hidden="true" style="margin-right: 1rem;"></i>
              {{- section.settings.asidemenu }}
            </h3>
            <ul class="menu">
              {% for link in section.settings.asidemenu.links %}
                <li class="menu-link">
                  <a href="{{ link.url }}">{{ link.title }}</a>

                  {% if link.links.size > 0 %}
                    <ul class="menu dropdown-child">
                      {% for child_link in link.links %}
                        <li class="menu-link">
                          <a href="{{ child_link.url }}">{{ child_link.title }}</a>

                          {% if child_link.links.size > 0 %}
                            <ul class="menu dropdown-grandchild">
                              {% for grandchild_link in child_link.links %}
                                <li class="menu-link">
                                  <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                </li>
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="page-content">
          {{ page.content }}
          <div id="content" class="tabs1">
            <input style="display: none;" class="tabs__radio" name="content" type="radio" id="tab1" hidden checked />
            <input style="display: none;" class="tabs__radio" name="content" type="radio" id="tab2" hidden />
            <input style="display: none;" class="tabs__radio" name="content" type="radio" id="tab3" hidden />
            <input style="display: none;" class="tabs__radio" name="content" type="radio" id="tab4" hidden />
            <ul class="tabs__list">
              <li><a href="#tab1"><label for="tab1">{{ section.settings.tab1heading }}</label></a></li>
              <li><a href="#tab2"><label for="tab2">{{ section.settings.tab2heading }}</label></a></li>
              <li><a href="#tab3"><label for="tab3">{{ section.settings.tab3heading }}</label></a></li>
              <li><a href="#tab4"><label for="tab4">{{ section.settings.tab4heading }}</label></a></li>
            </ul>
            <div class="policies-tab-container">
              <article class="tabs__panel" id="content-feature1-panel">
                <h3>{{ section.settings.tab1heading }}</h3>
                <div>{{ section.settings.tab1content }}</div>
              </article>
              <aside class="tabs__panel" id="content-feature2-panel">
                <h3>{{ section.settings.tab2heading }}</h3>
                <div>{{ section.settings.tab2content }}</div>
              </aside>
              <aside class="tabs__panel" id="content-feature3-panel">
                <h3>{{ section.settings.tab3heading }}</h3>
                <div>{{ section.settings.tab3content }}</div>
              </aside>
              <aside class="tabs__panel" id="content-summary-panel">
                <h3>{{ section.settings.tab4heading }}</h3>
                <div>{{ section.settings.tab4content }}</div>
              </aside>
            </div>
          </div>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
            <script type="text/javascript">
              	(function ($) {
                var hasHistoryReplaceStateSupport = window.history && window.history.replaceState,
                    initCounter = 0;
                $(function () {
                  $(document).on('click', '.tabs__list label', function (e) {
                    if(e.ctrlKey) {
                      return;
                    }
                    var $this = $(this),
                        hash = '#' + $this.attr('for'),
                        tabContainer;
                    if (hasHistoryReplaceStateSupport) {
                      window.history.replaceState('', '', hash);
                    } else {
                      /* IE8 fallback */
                      setTimeout(function () {
                        document.location.hash = hash;
                      }, 0);
                      tabContainer = $(hash).parent();
                      tabContainer.find('.tabs__radio--checked').removeClass('tabs__radio--checked');
                      tabContainer.find('.tabs__list--active').removeClass('tabs__list--active');
                      tabContainer.find('.tabs__panel--active').removeClass('tabs__panel--active');
                      $(hash).addClass('tabs__radio--checked');
                      $this.addClass('tabs__list--active');
                      $('.tabs__container ' + hash + '-panel').addClass('tabs__panel--active');
                    }
                  });

                  function hashChange() {
                    var hash = document.location.hash,
                        $hash = $(hash),
                        tabContainer;
                    if (!$hash.is('input')) {
                      var $panel = $hash.closest('.tabs__container > .tabs__panel'),
                          id = $panel.attr('id');
                      if (id) {
                        $('.tabs__list label[for="' + id.replace('-panel', '') + '"]').click();
                        $panel.parent().scrollLeft(0).scrollTop(0);
                      } else if (initCounter !== false && initCounter < 50) {
                        initCounter++;
                        setTimeout(hashChange, 100);
                      }
                      return;
                    }
                    initCounter = false;
                    if (hasHistoryReplaceStateSupport) {
                      $hash.prop('checked', true);
                    } else {
                      /* IE8 fallback */
                      tabContainer = $hash.parent();
                      tabContainer.find('.tabs__radio--checked').removeClass('tabs__radio--checked');
                      tabContainer.find('.tabs__list--active').removeClass('tabs__list--active');
                      tabContainer.find('.tabs__panel--active').removeClass('tabs__panel--active');
                      $hash.prop('checked', true).addClass('tabs__radio--checked');
                      $('label[for="' + hash.slice(1) + '"]').addClass('tabs__list--active');
                      $('.tabs__container ' + hash + '-panel').addClass('tabs__panel--active');
                    }
                  }
                  $(window).on('hashchange', hashChange);
                  hashChange();
                  /* IE8 fallback */
                  if (!hasHistoryReplaceStateSupport) {
                    $('.tabs__radio').each(function (index, element) {
                      if ($(element).prop('checked')) {
                        var hash = '#' + $(element).attr('id');
                        $(hash).addClass('tabs__radio--checked');
                        $('label[for="' + hash.slice(1) + '"]').addClass('tabs__list--active');
                        $('.tabs__container ' + hash + '-panel').addClass('tabs__panel--active');
                      }
                    });
                  }
                });
              })(jQuery);
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
