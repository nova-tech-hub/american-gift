<style>
		.tabs {
  display: flex;
}
#content{
  display: flex;
}
  .page-header-main .container .page-content-box .rte .page-content {
    flex: 0 0 78.5% !important;
    width: 78.5% !important;
}
.tabs__list {
    border: 1px solid #ccc;
    background-color: #f1f1f1;
    width: 30%;
    height: fit-content;
    border-right: none;
    flex: 0 0 26%;
        padding: 0 !important;
    margin: 0 !important;
}
.tabs__list > li a {
	text-decoration: none;
	cursor: pointer;
}
.tabs__list > li {
	margin: 0 !important;
}
.tabs__list > li label {
  display: block;
    background-color: inherit;
    color: black;
    padding: 22px 16px;
    width: 100%;
    border: none;
    outline: none;
    text-align: left;
    cursor: pointer;
    font-size: 17px;
}
.tabs__list > li:hover label {
  background-color: #fff;
    border-right: none;
    border-left: 3px solid #823964;
    border-radius: 0;
    transition: all 170ms ease-in-out;
}
.tabs__radio:nth-of-type(1):checked ~ .tabs__list > li:nth-of-type(1) label, .tabs__radio:nth-of-type(2):checked ~ .tabs__list > li:nth-of-type(2) label, .tabs__radio:nth-of-type(3):checked ~ .tabs__list > li:nth-of-type(3) label, .tabs__radio:nth-of-type(4):checked ~ .tabs__list > li:nth-of-type(4) label, .tabs__radio:nth-of-type(5):checked ~ .tabs__list > li:nth-of-type(5) label {
  background-color: #fff;
    border-right: none;
    border-left: 3px solid #823964;
    border-radius: 0;
}
/* IE8 fallback */
.tabs__list > li .tabs__list--active {
  background: #FFFFFF;
  height: 21px;
  margin-bottom: -1px;
  margin-top: 0;
}
.policies-tab-container {
  background: #FFF;
  border: 1px solid #D5D5D5;
  font-size: 0;
  margin: 0;
  overflow: hidden;
  position: relative;
  white-space: nowrap;
}
.policies-tab-container > .tabs__panel {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: inline-block;
  font-size: 12px;
  height: 0;
  margin: 0;
  padding: 0 20px;
  vertical-align: top;
  white-space: normal;
  width: 100%;
}
.tabs__radio:nth-of-type(1):checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: 0;
}
.tabs__radio:nth-of-type(2):checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -100%;
}
.tabs__radio:nth-of-type(3):checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -200%;
}
.tabs__radio:nth-of-type(4):checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -300%;
}
.tabs__radio:nth-of-type(5):checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -400%;
}
/* IE8 fallbacks */
.tabs__radio--checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: 0;
}
.tabs__radio + .tabs__radio--checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -100%;
}
.tabs__radio + .tabs__radio + .tabs__radio--checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -200%;
}
.tabs__radio + .tabs__radio + .tabs__radio + .tabs__radio--checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -300%;
}
.tabs__radio + .tabs__radio + .tabs__radio + .tabs__radio + .tabs__radio--checked ~ .policies-tab-container > .tabs__panel:first-child {
  margin-left: -400%;
}
.tabs__radio:nth-of-type(1):checked ~ .policies-tab-container > .tabs__panel:nth-child(1),
.tabs__radio:nth-of-type(2):checked ~ .policies-tab-container > .tabs__panel:nth-child(2),
.tabs__radio:nth-of-type(3):checked ~ .policies-tab-container > .tabs__panel:nth-child(3),
.tabs__radio:nth-of-type(4):checked ~ .policies-tab-container > .tabs__panel:nth-child(4),
.tabs__radio:nth-of-type(5):checked ~ .policies-tab-container > .tabs__panel:nth-child(5) {
  height: auto;
}
/* IE8 fallback */
.policies-tab-container > .tabs__panel--active {
  height: auto;
}
.policies-tab-container .tabs__panel h3 {
    font-size: 30px;
    line-height: 35px;
    color: #282828;
    font-weight: 700;
    margin: 35px 0 15px 0;
}
.policies-tab-container .tabs__panel div{
	font-size: 14px;
    color: #3f3f3f;
}

