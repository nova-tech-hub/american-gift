{%- liquid
  assign badgestyle = "topright"
  assign badge = false
  for tag in product.tags
  	assign tag = tag | downcase
    if tag contains "badgestyle-"
      capture badgestyle
      	echo tag | replace: "badgestyle-", ""
      endcapture
    endif
    if tag contains "badge-"
      capture badge
        echo tag | replace: "badge-", ""
      endcapture
    endif
  endfor
-%}
{% unless product.available %}
  <div class="badges topleft">
    <img src="{{ 'sold_out.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Sold Out" loading="lazy" />
  </div>
{% elsif badge %}
  <div class="badges {{ badgestyle }}">
    {% if badge == "freeshipping" %}
      <img src="{{ 'shipping_free.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Shipping Free" loading="lazy" />
    {% endif %}
    {% if badge == "bestseller" %}
      <img src="{{ 'best_seller.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Best Seller" loading="lazy" />
    {% endif %}
    {% if badge == "new" %}
      <img src="{{ 'new.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="New" loading="lazy" />
    {% endif %}
    {% if badge == "onsale" %}
      <img src="{{ 'on_sale.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="On Sale" loading="lazy" />
    {% endif %}
    {% if badge == "performance" %}
      <img src="{{ 'performance.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Performance" loading="lazy" />
    {% endif %}
    {% if badge == "savenow" %}
      <img src="{{ 'save_now.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Save Now" loading="lazy" />
    {% endif %}
    {% if badge == "toprated" %}
      <img src="{{ 'top_rated.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Top Rated" loading="lazy" />
    {% endif %}
    {% if badge == "preorder" %}
      <img src="{{ 'pre_order.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Pre Order" loading="lazy" />
    {% endif %}
    {% if badge == "instock" %}
      <img src="{{ 'in_stock.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="In Stock" loading="lazy" />
    {% endif %}
    {% if badge == "soldout" %}
      <img src="{{ 'sold_out.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Sold Out" loading="lazy" />
    {% endif %}
    {% if badge == "custom1" %}
      <img src="{{ 'custom_1.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Custom 1" loading="lazy" />
    {% endif %}
    {% if badge == "custom2" %}
      <img src="{{ 'custom_2.png' | asset_img_url: '200x' }}" width="200" height="200" class="p-badge-img" alt="Custom 2" loading="lazy" />
    {% endif %}
  </div>
{% endunless %}